<%= form_for(@question, html: { class: "form-horizontal" }) do |f| %>
  <% if @question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
      <% @question.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <div class="control-label"><%= f.label :topic %></div>
    <div class="controls"><%= f.text_field :topic %></div>
  </div>
  <div class="control-group">
    <div class="control-label" ><%= f.label :question %></div>
    <div class="controls" ><%= f.text_area :question %></div>
  </div>
  <div class="control-group">
    <div class="control-label" ><%= f.label :user %></div>
    <div class="controls" ><%= collection_select(:question, :user_id, User.all, :id, :name) %></div>
  </div>
  <div class="control-group">
    <div class="control-label" ><%= f.label :teacher %></div>
    <div class="controls" ><%= collection_select(:question, :teacher_id, Teacher.all, :id, :name) %></div>
  </div>


  <div class="control-label" >
    <div class="controls"> 
      <%= f.submit :class=>"btn btn-success"%>
    </div>
  </div>
<% end %>
