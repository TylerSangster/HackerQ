
<h1>HackerQ</h1>

<table class="table">
  <thead>
    <tr>
      <th>Number</th>
      <th>Question</th>
      <th>Topic</th>
      <th>Answered</th>

      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.id %></td>
        <td><%= question.question %></td>
        <td><%= question.topic %></td>
        <td><%= question.status %></td>
        <td><%= link_to 'Edit', edit_question_path(question), :class=>"btn btn-primary" %>
        <%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<table >
  <thead>
    <tr>
      <td><%= link_to 'New Question', new_question_path, :class=>"btn btn-primary" %></td>
      <td><%= link_to 'Users', users_path, :class=>"btn" %></td>
      <td><%= link_to 'Teachers', teachers_path, :class=>"btn" %></td>
    </tr>
  </table>

